<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="ChemProV.UI.CommentPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400" d:DesignWidth="150">
    
    <StackPanel x:Name="LayoutRoot" Background="White">
        <sdk:Label HorizontalAlignment="Stretch" Background="LightGray">
            Equation Comments
        </sdk:Label>
        <StackPanel Name="CommentsStack">
            <Border CornerRadius="3.0" BorderBrush="Red" BorderThickness="2" Margin="3,3,3,3">
                <TextBlock>Sticky notes go in here</TextBlock>
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>
