<controls:ChildWindow x:Class="ChemProV.UI.OSBLE.OSBLEOrDiskWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="300" Height="150" 
           Title="Open From...">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="0" Grid.Column="0"
            Margin="3,3,3,3"
            Content="Open from an OSBLE assignment..." 
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
            Name="OSBLEButton" Click="OSBLEButton_Click" />

        <Button
            Grid.Row="1" Grid.Column="0"
            Margin="3,3,3,3"
            Content="Open from a file on disk..." 
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="DiskButton" Click="DiskButton_Click" />
    </Grid>
</controls:ChildWindow>