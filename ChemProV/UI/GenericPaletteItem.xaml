<UserControl x:Class="ChemProV.UI.GenericPaletteItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="Auto" Height="Auto">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Name="PaletteIcon" 
               Source="/Icons/pu_generic.png" 
               Grid.Row="0" 
               Grid.Column="0" 
               Stretch="Fill"
               Width="40"
               Height="40"
               Margin="0,0,4,0"
               />
        <TextBlock Name="PaletteDescription" 
                   Grid.Row="0" 
                   Grid.Column="1" 
                   VerticalAlignment="Center"
                   Text="Generic Item"
                   TextWrapping="Wrap"
                   Width="100"
                   />
    </Grid>
</UserControl>
