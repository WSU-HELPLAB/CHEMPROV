<processUnits:GenericProcessUnit x:Class="ChemProV.PFD.ProcessUnits.LabeledProcessUnit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:processUnits="clr-namespace:ChemProV.PFD.ProcessUnits"
    mc:Ignorable="d"
    Width="50" Height="69">
    <Border>
        <StackPanel Orientation="Vertical">
            <Border Name="ProcessUnitBorder"
                BorderThickness="2"
                Width="45" Height="45"
                BorderBrush="Transparent">
                <Image Name="ProcessUnitImage"
               Source="/UI/Icons/pu_generic.png"
               Stretch="None"
               />
            </Border>
            <TextBox x:Name="ProcessUnitName" Width="50" Height="24" Text="{Binding Path=Id, Mode=TwoWay}" />
        </StackPanel>
    </Border>
</processUnits:GenericProcessUnit>
